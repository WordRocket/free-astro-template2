---
import FormattedDate from '../../FormattedDate.astro';
import { calculateReadingTime } from '../../../lib/reading';

interface Props {
  post: any;
}
const { post } = Astro.props as Props;

const readingTimeMin = calculateReadingTime(post.content || '');
const tags = post.post_tags?.map((pt: any) => pt.tag) || [];
---

<article class="card-surface p-4 h-full flex flex-col gap-3 relative">
  {post.hero_image && (
    <img src={post.hero_image} alt={post.title} width="640" height="360" class="w-full h-48 object-cover rounded" />
  )}
  <h3 class="text-xl font-semibold text-[color:var(--color-text-primary)]">{post.title}</h3>
  <p class="text-[color:var(--color-text-muted)]">{post.excerpt}</p>
  <div class="flex flex-col text-sm text-[color:var(--color-text-muted)] gap-1">
    <div class="flex items-center gap-1">
      <a href={`/blog/author/${post.author?.slug}/`} class="hover:text-[color:var(--accent)] interactive-link">{post.author?.name || 'Site Author'}</a>
    </div>
    <div class="flex items-center gap-1">
      {post.published_at && <FormattedDate date={new Date(post.published_at)} />}
    </div>
    {readingTimeMin > 0 && (
      <div class="flex items-center gap-1">
        <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="12" cy="12" r="9"/>
          <path d="M12 7v5l3 3"/>
        </svg>
        {readingTimeMin} min read
      </div>
    )}
  </div>
  {tags.length > 0 && (
    <div class="flex gap-2 flex-wrap">
      {tags.map((tag: any) => <a href={`/blog/tag/${tag.slug}/`} class="sw-tag interactive-link">{tag.name}</a>)}
    </div>
  )}
  <a href={`/blog/${post.slug}/`} class="stretched-link" aria-label={post.title}></a>
</article>


